@model TaskBoard.Web.Models.ViewModels.LoginModel

<h2>Login</h2>

<a href="Register">Registration</a>

<form asp-action="Login" asp-controller="Account" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ValidationSummary.ModelOnly" />
    <div>
        <div class="form-group">
            <label asp-for="Username">Enter name</label>
            <input type="text" asp-for="Username" />
            <span asp-validation-for="Username" />
        </div>
        <div class="form-group">
            <label asp-for="Password">Enter password</label>
            <input asp-for="Password" />
            <span asp-validation-for="Password" />
        </div>
        <div class="form-group">
            <input type="submit" value="Login" class="btn" />
        </div>
    </div>
</form>